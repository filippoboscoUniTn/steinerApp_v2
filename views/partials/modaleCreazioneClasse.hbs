<div class="modal fade" id="modaleNuovaClasse" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h4 class="modal-title text-white" id="modalTitleCreaClasse"></h4>
        <button type="button" class="btn btn-danger" onclick="closeModaleCreaClasse()" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form method="POST" id="formCreaClasse">
          <label for="classeCreaClasse">Classe : </label>
          <select class="form-control" id="classeCreaClasse" name="classeCreaClasse">
          </select>

          <label for="sezioneCreaClasse">Sezione : </label>
          <select class="form-control" id="sezioneCreaClasse" name="sezioneCreaClasse">
          </select>

          <label for="materieCreaClasse">Materie :</label>
          <input type="text" class="form-control" id="materieCreaClasse" name="materieCreaClasse" placeholder="Storia,Italiano,Matematica,...">
          <small>Inserire le materie separate da una virgola</small>
          <br>
          <br>
          <p class="h5">Maestro di Classe</p>
          <label for="nomeMaestroCreaClasse">Nome :</label>
          <input type="text" class="form-control" id="nomeMaestroCreaClasse" name="nomeMaestroCreaClasse">

          <label for="cognomeMaestroCreaClasse">Cognome :</label>
          <input type="text" class="form-control" id="cognomeMaestroCreaClasse" name="cognomeMaestroCreaClasse">



              <div class="mt-3">
                <button type="submit" class="btn btn-success">Crea</button>
              </div>

        </form>

      </div>

    </div>
  </div>
</div>
