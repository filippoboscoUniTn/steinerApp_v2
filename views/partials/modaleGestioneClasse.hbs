<div class="modal fade" id="modaleGestioneClasse" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content">

      <div class="modal-header bg-primary">

        <h4 class="modal-title text-white" id="modalTitleGestioneClasse"></h4>
        <button type="button" class="btn btn-danger" onclick="closeModaleGestioneClasse()" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        <form method="POST" id="formGestioneClasse">

          <label for="inizioAnnoGestioneClasse">Anno Scolastico : </label>
          <select class="form-control" id="inizioAnnoGestioneClasse" name="inizioAnnoGestioneClasse">
          </select>
          <br>
          <label for="classeGestioneClasse">Classe : </label>
          <select class="form-control" id="classeGestioneClasse" name="classeGestioneClasse">
          </select>

          <div class="mt-3">
            <button type="submit" class="btn btn-success">Modifica</button>
            <button type="button" class="btn btn-danger" id="deleteClasseBtn">Elimina</button>
          </div>

        </form>

      </div>

    </div>

  </div>
</div>
