<div class="modal fade" id="modaleGestioneSezione" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content">

      <div class="modal-header bg-primary">

        <h4 class="modal-title text-white" id="modalTitleGestioneSezione"></h4>
        <button type="button" class="btn btn-danger" onclick="closeModaleGestioneSezione()" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        <form method="POST" id="formGestioneSezione">

          <label for="inizioAnnoGestioneSezione">Anno Scolastico : </label>
          <select class="form-control" id="inizioAnnoGestioneSezione" name="inizioAnnoGestioneSezione">
          </select>

          <label for="classeGestioneSezione">Classe : </label>
          <select class="form-control" id="classeGestioneSezione" name="classeGestioneSezione">
          </select>

          <label for="sezioneGestioneSezione">Sezione : </label>
          <select class="form-control" id="sezioneGestioneSezione" name="sezioneGestioneSezione">
          </select>


          <label for="materieGestioneSezione">Materie :</label>
          <input type="text" class="form-control" id="materieGestioneSezione" name="materieGestioneSezione" placeholder="Storia,Italiano,Matematica,...">
          <small>Inserire le materie separate da una virgola</small>
          <br>
          <br>
          <p class="h5">Maestro di Classe</p>
          <label for="nomeMaestroGestioneSezione">Nome :</label>
          <input type="text" class="form-control" id="nomeMaestroGestioneSezione" name="nomeMaestroGestioneSezione">
          <label for="cognomeMaestroGestioneSezione">Cognome :</label>
          <input type="text" class="form-control" id="cognomeMaestroGestioneSezione" name="cognomeMaestroGestioneSezione">

          <div class="mt-3">
            <button type="submit" class="btn btn-success">Modifica</button>
            <button type="button" class="btn btn-danger" id="deleteSezioneBtn">Elimina</button>
          </div>

        </form>

      </div>

    </div>

  </div>
</div>
