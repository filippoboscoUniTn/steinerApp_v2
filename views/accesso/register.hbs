<div class="container">
    <div class="row">

        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation" class="active"><a href="/login">Login</a></li>
                </ul>
            </nav>
            <h3 class="text-muted">{{subTitle}}</h3>
        </div>

        <div class="col-lg-12">

            {{#each errors}}
                <div class="alert alert-danger">{{this}}</div>
            {{/each}}

        </div>

        <div class="col-lg-12">
            <form method="POST" action="/register">


                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" placeholder="First Name">

                </div>

                <div class="form-group">
                    <label>Surname</label>
                    <input type="text" name="surname" class="form-control" placeholder="Surname">
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control" placeholder="Email">
                </div>

                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" name="username" class="form-control" placeholder="User Name">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Password">
                </div>

                <div class="form-group">
                    <label>Re enter password</label>
                    <input type="password" name="password2" class="form-control" placeholder="Re enter password">
                </div>



                <button type="submit" class="btn btn-success">Submit</button>
                <div class="col-lg-12"><br></div>
            </form>

        </div>
    </div>
</div> <!-- /container -->

<script type="text/javascript" src="/js/bootstrap.js"></script>
